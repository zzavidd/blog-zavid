<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="color-scheme" content="light" />
<meta name="supported-color-schemes" content="light" />

<link
  href="https://fonts.googleapis.com/css?family=Mulish:400,700"
  rel="stylesheet"
  type="text/css"
/>

<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
  integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
  crossorigin="anonymous"
/>

<head>
  <style type="text/css">
    * {
      font-family: 'Mulish';
    }

    .email {
      background: #080808;
      margin: 0 auto;
      max-width: 576px;
    }

    .email-content {
      background: #202020;
      color: #fff;
      font-size: 1.05em;
      line-height: 1.5;
      margin: 0 auto;
      padding: 1.5em;
    }

    header,
    .footer {
      background: #111;
      color: rgb(255, 255, 255);
      font-size: 0.9em;
      padding: 1em;
    }

    .heading {
      color: #fff;
      text-align: left;
    }

    .heading h1 {
      margin: 0 0 0.3em;
    }

    .signature {
      max-height: 90px;
      max-width: 145px;
    }

    .hyperlink {
      color: rgb(188, 131, 255) !important;
    }

    .hyperlink:hover {
      color: rgb(151, 105, 204) !important;
    }

    .content-image {
      border-radius: 8px;
      margin: 1em 0;
      object-fit: cover;
      object-position: top;
      user-select: none;
      width: 100%;
    }

    .button-container {
      margin: 2em 0 1.5em;
      padding: 0.5em 0;
    }

    .button {
      background: #111;
      border: 1px solid #fff;
      border-radius: 10px;
      color: #fff !important;
      cursor: pointer;
      font-size: 0.85em;
      font-weight: bold;
      padding: 1.2em;
      text-decoration: none;
    }

    .footer {
      text-align: center;
    }

    /** Default setting */
    .footer-subscription-notice {
      font-size: 1em;
      line-height: 1.6;
      margin: 0 auto;
      width: 85%;
    }

    .footer-social-container,
    .zavid-logo {
      width: 145px;
    }

    .zavid-logo {
      border: 2px solid #f8ffd2;
      border-radius: 50%;
    }

    .footer-website-container {
      margin: 0.8em auto;
      text-align: center;
    }

    .footer-website-links {
      color: #fff !important;
      font-size: 0.75em;
      text-decoration: none;
    }

    .footer-website-links:hover {
      color: rgb(151, 105, 204) !important;
    }

    .footer-social-container {
      margin: 0.4em auto;
    }

    .footer-social-links {
      width: 17%;
    }

    .footer-social-links img {
      border-radius: 10px;
      width: 100%;
    }

    .copyright {
      font-size: 0.75em;
      margin-top: 1em;
    }

    /* Media queries for mobile */

    @media (max-width: 576px) {
      .email {
        padding: 0;
      }

      .footer-subscription-notice {
        font-size: 0.9em;
        width: 90%;
      }

      .footer-website-container {
        width: 80%;
      }

      .footer-website-links {
        font-size: 0.6em;
      }

      .signature-cell {
        display: none;
      }
    }
  </style>
</head>
