<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="color-scheme" content="light" />
<meta name="supported-color-schemes" content="light" />

<link
  href="https://fonts.googleapis.com/css?family=Mulish:400,700"
  rel="stylesheet"
  type="text/css"
/>

<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
  integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
  crossorigin="anonymous"
/>

<head>
  <style type="text/css">
    * {
      font-family: 'Mulish';
    }

    .email {
      background: #080808;
      margin: 0 auto;
      max-width: 576px;
    }

    .email-content {
      background: #202020;
      color: #fff;
      font-size: 1.1em;
      line-height: 1.5;
      margin: 0 auto;
      padding: 1.5em;
    }

    .email-content p {
      padding-bottom: 0.8em;
    }

    header,
    .footer {
      background: #111;
      color: rgb(255, 255, 255);
      padding: 1em;
    }

    header {
      font-size: 0.8em;
    }

    .footer {
      font-size: 0.9em;
    }

    hr {
      margin: 1em 0 2em !important;
    }

    h1,
    h2 {
      margin: 1em 0;
    }

    .blockquote {
      border-radius: 30px;
      font-size: 1.3em;
      line-height: 1.2;
      margin: 0.5em 0;
      padding: 1em 4em;
      position: relative;
      text-align: center;
    }

    .blockquote::before,
    .blockquote::after {
      font-size: 4em;
      font-style: normal;
      position: absolute;
    }

    .blockquote::before {
      content: '“';
      left: 0;
      top: -10px;
    }

    .blockquote::after {
      bottom: -50px;
      content: '”';
      right: 0;
    }

    .post-title {
      font-weight: bold;
      margin: 0 0 0.15em;
    }

    .diary-date {
      margin-bottom: 1.5em;
    }

    .signature {
      max-height: 90px;
      max-width: 145px;
    }

    .hyperlink,
    .hyperlink-content {
      color: rgb(188, 131, 255) !important;
    }

    .hyperlink:hover,
    .hyperlink-content:hover {
      color: rgb(151, 105, 204) !important;
    }

    .hyperlink-content {
      font-weight: bold;
    }

    .content-image {
      border-radius: 8px;
      margin: 1em 0;
      object-fit: cover;
      object-position: top;
      user-select: none;
      width: 100%;
    }

    .button {
      margin: 1.5em 0;
      padding: 0.5em 0;
    }

    .button a {
      background: #111;
      border: 1px solid #fff;
      border-radius: 10px;
      color: #fff !important;
      cursor: pointer;
      font-size: 0.85em;
      font-weight: bold;
      padding: 1.2em;
      text-decoration: none;
    }

    .footer {
      text-align: center;
    }

    /** Default setting */
    .footer-subscription-notice {
      font-size: 1em;
      line-height: 1.6;
      margin: 0 auto;
      width: 85%;
    }

    .footer-social-container,
    .zavid-logo {
      width: 145px;
    }

    .zavid-logo {
      border: 2px solid #f8ffd2;
      border-radius: 50%;
    }

    .footer-website-container {
      margin: 0.8em auto;
      text-align: center;
    }

    .footer-website-links {
      color: #fff !important;
      font-size: 0.75em;
      text-decoration: none;
    }

    .footer-website-links:hover {
      color: rgb(151, 105, 204) !important;
    }

    .footer-social-container {
      margin: 0.4em auto;
    }

    .footer-social-links {
      width: 17%;
    }

    .footer-social-links img {
      border-radius: 10px;
      width: 100%;
    }

    .copyright {
      font-size: 0.75em;
      margin-top: 1em;
    }

    /* Media queries for mobile */

    @media (max-width: 576px) {
      .post-title {
        font-size: 1.5em;
      }

      .diary-date {
        font-size: 0.9em;
      }

      .post-content,
      .diary-content {
        font-size: 0.9em;
      }

      .diary-content {
        margin-top: 2em;
      }

      .email {
        padding: 0;
      }

      .button {
        font-size: 0.75em;
      }

      .footer-subscription-notice {
        font-size: 0.8em;
        width: 90%;
      }

      .footer-website-container {
        width: 80%;
      }

      .footer-website-links {
        font-size: 0.7em;
      }

      .signature-cell {
        display: none;
      }

      .blockquote::before,
      .blockquote::after {
        font-size: 3.5em;
      }

      .blockquote {
        padding: 1em 2.5em;
      }

      .blockquote::before {
        top: 0;
      }

      .blockquote::after {
        bottom: -30px;
      }
    }
  </style>
</head>
