<%- include("partials/header.ejs") %>

<body class="container-fluid email">
  <header class="container header">New <%= post.type %> on ZAVID.</header>
  <div class="container email-content">
    <h1 class="post-title"><%= post.title %></h1>
    <div><%= post.datePublished %></div>

    <img
      src="<%= post.image %>"
      alt="<%= post.title %>"
      class="content-image" />

    <p class="post-content"><%= post.content %></p>

    <a href="<%= post.slug %>">
      <button type="button" class="button">Read Full Post</button>
    </a>
  </div>
  <%- include("partials/footer.ejs", { url: post.slug, token: subscriber.token
  }) %>
</body>
